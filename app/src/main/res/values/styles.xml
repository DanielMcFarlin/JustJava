<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">#795548</item>
        <!--Darker variant for the status bar and contextual app bars-->
        <item name="colorPrimaryDark">#5D4037</item>
        <!--Theme UI controls like checkboxes and text fields-->
        <item name="colorAccent">#448AFF</item>
    </style>

    <!--Style for a header Textview-->
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#8eceff</item>
    </style>
</resources>
